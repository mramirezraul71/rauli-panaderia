# ================================
# GENESIS - Configuración
# ================================

# Servidor
PORT=3001
NODE_ENV=development

# Base de datos SQLite
DATABASE_PATH=./data/genesis_erp.db

# JWT (Cambiar en producción)
JWT_SECRET=genesis_erp_super_secret_key_change_in_production_2024
JWT_EXPIRES_IN=24h

# Configuración de empresa
COMPANY_NAME=Empresa Demo
COMPANY_RUT=12345678-9
COMPANY_ADDRESS=Av. Principal 123
COMPANY_PHONE=+56 9 1234 5678

# IVA (Chile: 19%)
TAX_RATE=0.19

# Ollama (IA Local)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Impresora térmica (opcional)
PRINTER_ENABLED=false
PRINTER_TYPE=thermal
PRINTER_PORT=COM3

# Sincronización
SYNC_INTERVAL_MS=30000
MAX_OFFLINE_DAYS=7

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/genesis_erp.log

# Email SMTP (invitaciones)
SMTP_HOST=smtp.tudominio.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=usuario
SMTP_PASS=clave
SMTP_FROM=GENESIS <no-reply@tudominio.com>
APP_URL=http://localhost:5173

# OpenAI (Proxy server-side)
OPENAI_API_KEY=sk-xxxx
# Opcional: usar proxy/local/VPN
OPENAI_BASE_URL=https://api.openai.com

# Vercel (script scripts/vercel_config_deploy.py)
# Añadir en .env: VERCEL_TOKEN=tu_token_de_vercel
# VERCEL_TOKEN=
